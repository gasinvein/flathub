{
    "id": "com.opera.OperaPresto",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "18.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "opera",
    "rename-desktop-file": "opera-browser.desktop",
    "rename-icon": "opera-browser",
    "finish-args": [
        "--socket=x11", "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--device=all",
        "--env=GST_PLUGIN_SYSTEM_PATH=/app/lib/gstreamer-0.10",
        "--persist=.opera"
    ],
    "cleanup": [
        "*.a",
        "*.la",
        "/include",
        "/lib/pkgconfig",
        "/share/aclocal",
        "/share/man",
        "/share/doc",
        "/share/gtk-doc"
    ],
    "modules": [
        "shared-modules/gtk2/gtk2.json",
        "gstreamer/gstreamer-0.10.json",
        "gstreamer/gstreamer-0.10-plugins-base.json",
        "gstreamer/gstreamer-0.10-plugins-good.json",
        "gstreamer/gstreamer-0.10-ffmpeg.json",
        {
            "name": "at-spi2-atk",
            "config-opts": [
                "--disable-gtk-doc",
                "--disable-introspection",
                "--disable-man",
                "--disable-static",
                "--with-xinput=xfree"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.gnome.org/sources/at-spi2-atk/2.24/at-spi2-atk-2.24.1.tar.xz",
                    "sha256": "60dc90ac4f74b8ffe96a9363c25208a443b381bacecfefea6de549f20ed6957d"
                }
            ]
        },
        {
            "name": "opera",
            "buildsystem": "simple",
            "build-commands": [
                "./install --system --text --unattended --prefix /app --repackage /app"
            ],
            "post-install": [
                "for f in /app/share/icons/hicolor/*/mimetypes/opera-extension.{png,svg}; do mv $f ${f/opera-/com.opera.OperaPresto-}; done",
                "mv /app/share/mime/packages/{opera,com.opera.OperaPresto}-extension.xml"
            ],
            "build-options": {
                "strip": false,
                "no-debuginfo": true
            },
            "sources": [
                {
                    "type": "archive",
                    "only-arches": [ "x86_64" ],
                    "url": "https://get.geo.opera.com/pub/opera/linux/1216/opera-12.16-1860.x86_64.linux.tar.bz2",
                    "sha256": "29088a65ce0ba6781bf6aeff6f744cc5b59511ee1c43ea97564665c8bf0a73b0"
                },
                {
                    "type": "archive",
                    "only-arches": [ "i386" ],
                    "url": "https://get.geo.opera.com/pub/opera/linux/1216/opera-12.16-1860.i386.linux.tar.bz2",
                    "sha256": "b0c3736f5cb6609b704aa814b9aecbad520e8e56122f3896b2f1d9191afc57a1"
                }
            ],
            "cleanup": [
                "/bin/uninstall-opera"
            ]
        }
    ]
}
